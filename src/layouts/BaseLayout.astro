---
import "../styles/global.css";
import Navigation from "../components/common/Navigation.astro";
import Footer from "../components/common/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "국내 최초 AI 회생 솔루션 | 법무법인 아크로",
  description = "서울대 로스쿨 출신 변호사와 핀테크 전문가가 만든 AI 개인회생 솔루션"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="/og-image.png">
  <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
</head>
<body class="bg-stone-50 text-stone-800 antialiased selection:bg-blue-100 selection:text-blue-900">
  <Navigation />
  <slot />
  <Footer />
</body>
</html>
